{
  "name": "chatlog",
  "description": "Blogs by Brian and various Chatmans",
  "version": "0.0.2",
  "author": "The Starr Conspiracy",
  "ava": {
    "verbose": "true"
  },
  "bugs": "https://bitbucket.org/thestarrconspiracy/chatlog/issues",
  "dependencies": {
    "dotenv": "^4.0.0",
    "import-glob": "^1.5.0",
    "marked": "^0.3.7",
    "moment": "^2.22.1",
    "node-sass": "^4.7.2",
    "node-sass-glob-importer": "^5.0.2",
    "normalize.css": "^7.0.0",
    "prettier-stylelint": "^0.4.2",
    "reshape-standard": "^3.0.0",
    "sass-loader": "^6.0.6",
    "sitemap-static": "^0.4.2",
    "spike": "^2.0.0",
    "spike-contentful": "^3.1.1",
    "spike-css-standards": "^3.0.0",
    "spike-js-standards": "^2.0.2",
    "spike-optimize": "^0.1.2",
    "spike-page-id": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.1"
  },
  "homepage": "https://bitbucket.org/thestarrconspiracy/chatlog",
  "main": "app.js",
  "private": true,
  "repository": "https://bitbucket.org/thestarrconspiracy/chatlog",
  "scripts": {
    "lint:js": "eslint . --fix ; prettier ./**/*.{js,jsx,json,css} --write",
    "precommit": "lint-staged",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test ava",
    "start": "spike watch",
    "build": "spike compile",
    "prod": "NODE_ENV=production spike compile -e production && sitemap-static --prefix=https://www.chatlog.blog public --pretty > public/sitemap.xml"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "prettier/prettier": "warn"
    }
  },
  "eslintIgnore": [
    "public",
    "test"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": [
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "indentation": 2,
      "string-quotes": "single"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint . --fix",
      "git add"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
